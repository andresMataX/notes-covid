---
import '../styles/BaseLayout.css'

interface Props {
  title: string
}

const { title } = Astro.props
---

<!DOCTYPE html>
<html lang='es' data-theme='autumn'>
  <head>
    <meta charset='utf-8' />
    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
    <meta name='viewport' content='width=device-width' />
    <meta name='generator' content={Astro.generator} />
    <title>Notas COVID | {title}</title>
  </head>
  <body>
    <div class='flex flex-col gap-8 px-12'>
      <div class='navbar bg-base-100'>
        <a class='btn btn-ghost normal-case text-xl' href='./'> Notas COVID</a>
      </div>

      <div class='flex flex-col gap-16'>
        <div class='flex flex-col gap-6'>
          <h1 class='text-6xl font-semibold'>Últimas noticias</h1>

          <div class='flex gap-2'>
            <div class='badge badge-primary badge-outline'>México</div>
            <div class='badge badge-primary badge-outline'>Global</div>
            <div class='badge badge-primary badge-outline'>
              Estadísticas | México
            </div>
          </div>
        </div>

        <slot />
      </div>
    </div>
  </body>
</html>
